<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.package3.Fragment3">

    <ImageView
        android:id="@+id/imageViewZona_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/p_3"
        android:contentDescription="@string/menu_p_3"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/button_01"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_02"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/button_02"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/button_01"
        app:layout_constraintBottom_toTopOf="@+id/button_03"
        android:background="@android:color/transparent"
        android:layout_height="170dp"/>

    <Button
        android:id="@+id/button_03"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/button_02"
        app:layout_constraintBottom_toTopOf="@+id/button_zvon" />

    <Button
        android:id="@+id/button_zvon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/button_03"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>